<!doctype html>
<html lang="en">
	<head>
		<title>
			{% block title %}Signup Page
			{% endblock %}
		</title>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		{% block stylesheet %}
			<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

			<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

			<link rel="stylesheet" href="css/login.css">
		{% endblock %}
	</head>
	{% block body %}
		<section class="ftco-section">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-md-12 col-lg-10">
						<div class="wrap d-md-flex">
							<div class="img" style="background-image: url({{'img/slide5.png'}});"></div>
							<div class="login-wrap p-4 p-md-5">
								<div class="d-flex">
									<div class="w-100">
										<h3 class="mb-4">Sign In</h3>
									</div>
									<div class="w-100">
										<p class="social-media d-flex justify-content-end">
											<a href="#" class="social-icon d-flex align-items-center justify-content-center">
												<span class="fa fa-facebook"></span>
											</a>
											<a href="#" class="social-icon d-flex align-items-center justify-content-center">
												<span class="fa fa-twitter"></span>
											</a>
										</p>
									</div>
								</div>

								<form method="post" class="signin-form">
									{% for flash_error in app.flashes('verify_email_error') %}
										<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
									{% endfor %}
									{{ form_start(registrationForm) }}
									<div class="form-group mb-3">
										<label class="label" for="name">Email</label>
										{{ form_row(registrationForm.email,{'label':' ','attr':{'class':'form-control','placeholder': 'email'}}) }}
									</div>
									<div class="form-group mb-3">
										<label class="label" for="name">Username</label>
										{{ form_row(registrationForm.username,{'label':' ','attr':{'class':'form-control','placeholder': 'Username'}}) }}
									</div>
									<div class="form-group mb-3">
										<div class="row">
											<div class="col-lg-6">
												<label class="label" for="name">Last Name</label>
												{{ form_row(registrationForm.nom,{'label':' ','attr':{'class':'form-control','placeholder': 'Last Name'}}) }}
											</div>
											<div class="col-lg-6">
												<label class="label" for="name">First Name</label>
												{{ form_row(registrationForm.prenom,{'label':' ','attr':{'class':'form-control','placeholder': 'First Name'}}) }}
											</div>
										</div>
									</div>
									<div class="form-group mb-3">
										<label class="label" for="password">Password</label>
										{{ form_row(registrationForm.plainPassword,{'label':' ','attr':{'class':'form-control','placeholder': 'First Name'}}) }}
									</div>
									<div class="form-group mb-3">
											<label class="label" for="password">Phone Number</label>
												{{ form_row(registrationForm.num_tel,{'label':' ','attr':{'class':'form-control','placeholder': 'Phone Number'}}) }}
										</div>
										<div class="form-group mb-3">
											<label class="label" for="password">Birth Date</label>
											{{ form_row(registrationForm.date_naissance,{'label':' '}) }}
										</div>
										{{ form_row(registrationForm.agreeTerms,{'label':'Agree Terms '}) }}
										<div class="form-group">
											<button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
										</div>
										{{ form_end(registrationForm) }}
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</section>

		{% endblock %}
		{% block js %}
			<script src="js/jquery.min.js"></script>
			<script src="js/popper.js"></script>
			<script src="js/bootstrap.min.js"></script>
			<script src="js/main.js"></script>
		{% endblock %}
	</html>
</html>

